<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    :android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cmt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/cmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hfbvefhvbefghvbyrgvgfeegvedewđưedhuewduewhdưehduewhdưuedhưdewuhduewdhuih"
        android:textSize="16dp"
        android:padding="24dp"
        android:background="@color/creamwhite"
        app:layout_constraintTop_toTopOf="parent" />
<LinearLayout
    android:id="@+id/avt_name_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/avatar_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_search_24"
        app:layout_constraintTop_toBottomOf="@+id/cmt" />
    <LinearLayout
        android:id="@+id/name_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_user_name"
            android:textSize="15dp"
            android:text="Hứa Quang Đạt"/>
        <TextView
            android:id="@+id/cmt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/09/2024"
            android:textColor="@color/Teal"/>
    </LinearLayout>

</LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cmt_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/rpl_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reply"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hide_btn"
            android:text="Hide"
            app:layout_constraintStart_toEndOf="@+id/rpl_btn"
            android:layout_marginLeft="10dp"
            tools:ignore="MissingConstraints" />
        <ImageButton
            android:id="@+id/del_cmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white_outline_delete_24"
            android:backgroundTint="@color/red"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="1dp"/>
</LinearLayout>