<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.worldstory.duc.ducfragment.Duc_ComicStories_User_Fragment"
    android:id="@+id/swipeRefresh_comicStoriesUser"
    >

    <!-- TODO: Update blank fragment layout -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:id="@+id/linearLayout_fragment_comicStoryUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
    android:orientation="vertical"

        >


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/searchButton_ComicStoriesUser"
            android:paddingStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/icon_search"
            android:background="@drawable/image_button_search_slector"
            android:drawablePadding="8dp"
            />




        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green1"/>

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imgTestComicUserstory"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:iss_auto_cycle="true"

            app:iss_text_align="CENTER"
            />
        <TextView
            android:id="@+id/txt_test_comicUserstory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_buttonGenre_ComicStoriesUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green1"/>
        <LinearLayout
            android:id="@+id/linear_containerGridCardStory_fragmentComicStoriesUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />

    </LinearLayout>



</ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>