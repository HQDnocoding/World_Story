<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/img_story_itemChapterMarked"

        android:layout_width="70dp"
        android:layout_height="100dp"
        android:src="@drawable/a5"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_titleChapter_itemChapterMarked"

            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="chuong 1 he he he he a asl aslkd askj asd  sgdfg dfgd df"
            android:textStyle="bold"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/txt_titleStory_itemChapterMarked"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ten triuyem "
            />
    </LinearLayout>
</LinearLayout>
    <View
        android:background="@color/green1"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
    <FrameLayout
        android:id="@+id/btn_toChapter_chapterMark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@drawable/image_button_search_slector"
        />
</FrameLayout>