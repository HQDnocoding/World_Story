<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/img_avatar_itemUserCreatedStory"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cat"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"

            >
            <TextView
                android:id="@+id/txt_nickname_itemUserCreatedStory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ten ho la van nghe la ti"
                android:textStyle="bold"

                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/txt_numStories_itemUserCreatedStory"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textStyle="normal"
                    android:textColor="@color/green2"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/story"
                    android:textStyle="normal"

                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/btn_toInfoUser_itemUserCreatedStory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@drawable/image_button_search_slector"
        >

    </FrameLayout>
</androidx.cardview.widget.CardView>